<Window x:Class="engener.BaseEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:engener"
        mc:Ignorable="d"
        Title="BaseEditor" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Label"  Grid.Row="0" HorizontalAlignment="Left" Margin="189,10,0,0" VerticalAlignment="Top"/>
            <Button Content="Dodaj Regułę" Grid.Row="1"/>
            <Button x:Name="Add" Content="Dodaj Składową" Grid.Row="2" Click="AddIngridence_Click"/>
            <Button Content="Usuń Regułę" Grid.Row="3"/>
            <Button Content="Usuń Baze" Grid.Row="4"/>
            <Button x:Name="LogOut" Content="Wyloguj"  Grid.Row="5" Click="LogOut_Click"/>
        </Grid>
        
        <ListBox Grid.Column="1"/>


    </Grid>
</Window>
