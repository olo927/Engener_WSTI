<Window x:Class="engener.AddRule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:engener"
        mc:Ignorable="d"
        Title="AddRule" Height="500" Width="800" Background="Red" MinWidth="500" MinHeight="400">
    <Grid Background="Black" Margin="5px">
        <Label x:Name="Titel" Content="Dodaj Regułę" Foreground="White" HorizontalAlignment="Center" FontSize="20"/>
        <Grid x:Name="comboBoxField" Width="300" Height="100">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Foreground="White"  FontSize="16">
                <Label.Content>
                    <AccessText x:Name="category" TextWrapping="Wrap" Text="Kategoria:"/>
                </Label.Content>
            </Label>
            <ComboBox x:Name="option" Grid.Column="1"/>
            
        </Grid>
        <Button x:Name="Next" Content="Next" HorizontalAlignment="Left" Margin="550,356,0,0" VerticalAlignment="Top" Click="Next_Click" Width="75" FontSize="14" FontWeight="Bold"/>
    </Grid>
</Window>
