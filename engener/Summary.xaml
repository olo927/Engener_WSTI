<Window x:Class="engener.Summary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:engener"
        mc:Ignorable="d"
        Title="Summary" Height="350" Width="400" Background="Red" MinWidth="500" MinHeight="100">
    <Grid Background="Black" Margin="5px">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"/>

        <Label x:Name="Info" Content="Podsumowanie" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Top" Foreground="White" FontSize="25" FontWeight="Bold" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Confirm" Content="Zapisz regułę" VerticalAlignment="Top" Click="Confirm_Click" Grid.Column="0" HorizontalAlignment="Right" Margin="0,59,61,0" />
            <Button x:Name="Cancel" Content="Anuluj" HorizontalAlignment="Center"  VerticalAlignment="Top" Click="Cancel_Click" Grid.Column="1" Margin="0,59,61,0" />
        </Grid>


    </Grid>
</Window>
